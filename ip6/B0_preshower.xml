      </layer>      
    </detector>
    -->
  </detectors>

  <readouts>
    <readout name="B0PreshowerHits">
      <segmentation type="CartesianGridXZ" grid_size_x="1.0*mm" grid_size_z="1.0*mm" />
      <id>system:8,barrel:2,layer:4,module:12,sensor:2,x:32:-16,z:-16</id>
    </readout>
  </readouts>

</lccdd>
